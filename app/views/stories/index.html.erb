<% content_for :head do %>
  <%= javascript_import_module_tag "stories" %>
<% end %>

<div class="max-w-4xl mx-auto px-6 py-8" style="view-transition-name: page-content;">
  <!-- Header -->
  <header class="navbar bg-base-100 rounded-box shadow-sm mb-8 px-4">
    <div class="flex-1">
      <h1 style="font-weight: 900; font-style: italic; font-size: 1.75rem;">STORIES</h1>
      <span class="badge badge-primary ml-3">Today</span>
    </div>
    <div class="flex items-center gap-3">
      <% if current_user %>
        <div class="flex items-center gap-2">
          <% if current_user.avatar_url.present? %>
            <div class="avatar">
              <div class="w-8 rounded-full">
                <img src="<%= current_user.avatar_url %>" alt="" referrerpolicy="no-referrer" />
              </div>
            </div>
          <% end %>
          <span class="text-sm"><%= current_user.name %></span>
        </div>
      <% end %>
      <a href="/newsroom" class="btn btn-ghost btn-sm">Newsroom</a>
      <a href="/studio" class="btn btn-ghost btn-sm">Studio</a>
    </div>
  </header>

  <!-- Broadcast Timer -->
  <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content shadow-lg mb-6">
    <div class="card-body py-4">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="font-bold text-lg">Next Broadcast</h2>
          <p class="text-primary-content/80 text-sm">Stories go live at 7:00 PM</p>
        </div>
        <div class="text-right">
          <div id="broadcast-countdown" class="font-mono text-2xl font-bold">--:--:--</div>
          <div class="text-xs text-primary-content/60">until broadcast</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stories Feed -->
  <div class="space-y-4 mb-8">
    <% if @stories.any? %>
      <% @stories.each do |story| %>
        <a href="<%= story_path(story) %>" class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow block">
          <div class="card-body">
            <div class="flex items-start gap-3">
              <div class="avatar placeholder">
                <% if story.user.avatar_url.present? %>
                  <div class="w-10 rounded-full">
                    <img src="<%= story.user.avatar_url %>" alt="" referrerpolicy="no-referrer" />
                  </div>
                <% else %>
                  <div class="bg-neutral text-neutral-content w-10 rounded-full">
                    <span><%= story.user.name&.first&.upcase %></span>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <span class="font-semibold text-sm"><%= story.user.name %></span>
                  <span class="text-xs text-base-content/40"><%= time_ago_in_words(story.created_at) %> ago</span>
                  <% if story.story_type.present? %>
                    <span class="badge badge-sm badge-outline"><%= story.story_type %></span>
                  <% end %>
                </div>
                <h3 class="font-bold"><%= story.title %></h3>
                <% if story.body.present? %>
                  <p class="text-sm text-base-content/70 line-clamp-2 mt-1"><%= truncate(story.body, length: 200) %></p>
                <% end %>
                <% if story.analysis.present? %>
                  <div class="mt-2 p-2 bg-info/10 rounded-lg">
                    <span class="text-xs font-semibold text-info">AI Analysis</span>
                    <p class="text-xs text-base-content/60 line-clamp-1"><%= truncate(story.analysis, length: 100) %></p>
                  </div>
                <% end %>
              </div>
              <div class="flex flex-col items-end gap-1">
                <div class="badge badge-ghost badge-sm"><%= story.comments.size %> comments</div>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    <% else %>
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body items-center text-center py-12">
          <div class="text-5xl mb-3">ðŸ“°</div>
          <h3 class="font-bold text-lg">No Stories Yet Today</h3>
          <p class="text-sm text-base-content/60 max-w-md">Upload an image, video, audio or text in the newsroom to create your first story.</p>
          <a href="/newsroom" class="btn btn-primary btn-sm mt-3">Go to Newsroom</a>
        </div>
      </div>
    <% end %>
  </div>

  <!-- AI Chat Interface -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body p-0">
      <!-- Chat Header -->
      <div class="flex items-center gap-3 p-4 border-b border-base-300">
        <div class="avatar placeholder">
          <div class="bg-neutral text-neutral-content w-12 rounded-full flex items-center justify-center">
            <span class="text-2xl leading-none">ðŸ¤–</span>
          </div>
        </div>
        <div>
          <h2 class="font-bold text-sm">AI Journalist</h2>
          <span class="text-xs text-success flex items-center gap-1">
            <span class="w-2 h-2 bg-success rounded-full animate-pulse inline-block"></span>
            Online
          </span>
        </div>
        <div class="ml-auto">
          <span class="badge badge-ghost badge-sm">Gemini Powered</span>
        </div>
      </div>

      <!-- Chat Messages -->
      <div id="chat-messages" class="p-4 space-y-1 max-h-[500px] overflow-y-auto scroll-smooth"
           data-user-avatar="<%= current_user&.avatar_url %>"
           data-user-name="<%= current_user&.name %>">
        <!-- AI Welcome -->
        <div class="chat chat-start">
          <div class="chat-image avatar placeholder">
            <div class="bg-neutral text-neutral-content w-10 rounded-full flex items-center justify-center">
              <span class="text-2xl leading-none">ðŸ¤–</span>
            </div>
          </div>
          <div class="chat-header text-xs text-base-content/50 mb-1">
            AI Journalist
            <time class="text-xs opacity-50">just now</time>
          </div>
          <div class="chat-bubble imessage-received">
            Good evening! I'm your AI Journalist. I can help you analyse stories, summarise the day's news, or answer questions about any uploaded content. What would you like to know?
          </div>
        </div>

        <!-- Mock conversation messages rendered by JS -->
        <div id="mock-messages"></div>
      </div>

      <!-- Chat Input -->
      <div class="border-t border-base-300 p-4">
        <div class="join w-full">
          <input type="text" id="chat-input" placeholder="Ask the AI Journalist..."
                 class="input input-bordered join-item flex-1" />
          <button id="btn-chat-send" type="button" class="btn btn-primary join-item">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
