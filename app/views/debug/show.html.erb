<% content_for :head do %>
  <%= lazy_javascript_module_tag "debug" %>
<% end %>

<!-- Toast container -->
<div id="toast-container" class="fixed top-4 right-4 z-50 flex flex-col gap-2 items-end"></div>

<div class="max-w-4xl mx-auto px-4 sm:px-6 py-6 sm:py-8" style="view-transition-name: page-content;">
  <%= render "shared/navbar", title: "DEBUG", badge: "Dev Only", badge_class: "badge-error", current: "debug" %>

  <!-- Debug-specific links -->
  <div class="flex flex-wrap gap-2 mb-6 -mt-4">
    <a href="/debug/mock_news" class="btn btn-warning btn-sm">Mock News</a>
  </div>

  <!-- Email (Resend) -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
        <span class="text-xl mr-1">ðŸ“§</span> Email (Resend)
      </h2>
      <p class="text-sm text-base-content/60">
        Sends a test email via Resend. Make sure your <code class="text-xs bg-base-200 px-1 rounded">RESEND_API_KEY</code> is set in <code class="text-xs bg-base-200 px-1 rounded">.env</code>.
      </p>
      <% if ENV["RESEND_API_KEY"].present? %>
        <div class="alert alert-success mt-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span class="text-sm"><strong>Resend configured</strong> â€” API key is set. Sending from <code class="bg-success-content/10 px-1 rounded">aijournalist@menews.network</code></span>
        </div>
      <% else %>
        <div class="alert alert-error mt-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span class="text-sm"><strong>Resend not configured</strong> â€” Add <code class="bg-error-content/10 px-1 rounded">RESEND_API_KEY</code> to your environment variables.</span>
        </div>
      <% end %>

      <div class="form-control mt-3">
        <label class="label"><span class="label-text text-xs">Recipient</span></label>
        <input type="email" id="email-to" value="<%= current_user&.email %>" placeholder="email@example.com" class="input input-bordered input-sm" />
      </div>
      <div class="form-control mt-2">
        <label class="label"><span class="label-text text-xs">Subject (optional)</span></label>
        <input type="text" id="email-subject" value="" placeholder="Newsroom Test Email" class="input input-bordered input-sm" />
      </div>

      <div class="card-actions mt-4">
        <button id="btn-send-email" class="btn btn-sm btn-primary">
          Send Test Email
        </button>
      </div>

      <div id="email-log" class="mt-3 hidden">
        <pre class="mono-panel min-h-[40px] max-h-[120px] text-xs"></pre>
      </div>
    </div>
  </div>

  <!-- Full Event Log -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
          Event Log
        </h2>
        <button id="btn-clear-log" class="btn btn-xs btn-ghost">Clear</button>
      </div>
      <pre id="event-log" class="mono-panel min-h-[100px] max-h-[300px] text-xs"></pre>
    </div>
  </div>
</div>
