<% content_for :head do %>
  <%= lazy_javascript_module_tag "mock_news" %>
<% end %>

<!-- Toast container (z-60 to stay above fullscreen player) -->
<div id="toast-container" class="fixed top-4 right-4 z-[60] flex flex-col gap-2 items-end"></div>

<div class="max-w-5xl mx-auto px-4 sm:px-6 py-6 sm:py-8" style="view-transition-name: page-content;">
  <!-- Header -->
  <header class="navbar bg-base-100 rounded-box shadow-sm mb-8 px-4">
    <div class="flex-1 flex items-center gap-3 min-w-0">
      <a href="/debug" class="btn btn-ghost btn-sm btn-square shrink-0">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <h1 class="truncate" style="font-weight: 900; font-style: italic; font-size: 1.75rem;">ME NEWS</h1>
      <span class="badge badge-warning shrink-0">Debug</span>
    </div>
  </header>

  <!-- 1. Weather Section -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
        <span class="text-xl mr-1">üå§Ô∏è</span> Weather
      </h2>
      <p class="text-sm text-base-content/60">
        Fetch current London weather and generate narration via Gemini.
      </p>
      <div class="card-actions mt-4">
        <button id="btn-fetch-weather" class="btn btn-sm btn-primary" disabled>
          Get Weather (London, UK)
        </button>
        <span id="weather-status" class="text-xs text-base-content/40"></span>
      </div>
      <div id="weather-output" class="mt-3 hidden">
        <pre class="mono-panel min-h-[40px] max-h-[200px] text-xs"></pre>
      </div>
    </div>
  </div>

  <!-- 2. Video Picker Section -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
        <span class="text-xl mr-1">üé¨</span> Video Stories
      </h2>
      <p class="text-sm text-base-content/60">
        Add video files one at a time or select multiple. You can use the picker repeatedly to build your list.
      </p>

      <div class="form-control mt-3">
        <label class="label"><span class="label-text text-xs">Add Videos</span></label>
        <input type="file" id="video-input" multiple accept="video/*"
               class="file-input file-input-bordered file-input-sm w-full" />
      </div>

      <!-- Per-video context areas (dynamically generated) -->
      <div id="video-list" class="mt-4 space-y-3"></div>

      <div class="card-actions mt-4">
        <button id="btn-upload-videos" class="btn btn-sm btn-primary" disabled>
          Upload & Analyze
        </button>
        <span id="upload-status" class="text-xs text-base-content/40"></span>
      </div>

      <!-- Per-story analysis progress (shown during upload+analyze) -->
      <div id="story-status-list" class="mt-3 space-y-2 hidden"></div>
    </div>
  </div>

  <!-- 3. Build & Render Section -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
        <span class="text-xl mr-1">üé¨</span> Build & Render
      </h2>
      <p class="text-sm text-base-content/60">
        Build the bulletin JSON, then render the final video server-side with FFmpeg.
      </p>

      <div class="card-actions mt-4 flex-wrap gap-2">
        <button id="btn-build" class="btn btn-sm btn-accent" disabled>
          Build Bulletin JSON
        </button>
        <button id="btn-render" class="btn btn-sm btn-success" disabled>
          Render Video
        </button>
      </div>

      <!-- Render progress (hidden until render starts) -->
      <div id="render-progress-section" class="mt-4 hidden">
        <div class="flex items-center justify-between mb-2">
          <span id="render-step" class="text-sm text-base-content/70">Queued...</span>
          <span id="render-pct" class="text-sm font-mono text-base-content/50">0%</span>
        </div>
        <div class="w-full bg-base-200 rounded-full h-3 overflow-hidden">
          <div id="render-bar"
               class="h-full bg-success rounded-full transition-all duration-500"
               style="width: 0%;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- 4. Player Section (hidden until render complete) -->
  <div id="player-section" class="mb-6 hidden">
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
          <span class="text-xl mr-1">üì∫</span> Rendered Bulletin
        </h2>

        <!-- Desktop: mockup-phone container -->
        <div class="hidden md:flex justify-center py-4">
          <div class="mockup-phone border-base-300">
            <div class="mockup-phone-camera"></div>
            <div class="mockup-phone-display bg-black"
                 style="width:375px;height:812px;overflow:hidden;">
              <video id="rendered-video"
                     style="width:100%;height:100%;object-fit:cover;"
                     playsinline controls></video>
            </div>
          </div>
        </div>

        <!-- Mobile: full-width video -->
        <div class="md:hidden mt-4">
          <div class="aspect-[9/16] bg-black rounded-xl overflow-hidden max-h-[80vh] mx-auto" style="max-width: 400px;">
            <video id="rendered-video-mobile"
                   style="width:100%;height:100%;object-fit:cover;"
                   playsinline controls></video>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 5. Debug Log -->
  <div class="card bg-base-100 shadow-sm mb-6">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <h2 class="card-title text-sm uppercase tracking-wider text-base-content/50">
          Debug Log
        </h2>
        <button id="btn-clear-log" class="btn btn-xs btn-ghost">Clear</button>
      </div>
      <pre id="event-log" class="mono-panel min-h-[100px] max-h-[300px] text-xs"></pre>
    </div>
  </div>

  <!-- 6. Raw JSON Output (collapsible) -->
  <div class="collapse collapse-arrow bg-base-100 shadow-sm mb-6">
    <input type="checkbox" />
    <div class="collapse-title text-sm uppercase tracking-wider text-base-content/50 font-semibold">
      Raw Master JSON
    </div>
    <div class="collapse-content">
      <pre id="master-json-output" class="mono-panel min-h-[100px] max-h-[500px] text-xs">Not built yet.</pre>
    </div>
  </div>
</div>
